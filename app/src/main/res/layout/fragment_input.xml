<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/flowers"
    tools:context=".ui.home.InputFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Заполните форму:"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_from_form"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/women"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_load_foto"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text=" load foto "
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#E85E1F80"

        app:cornerRadius="26dp" />

    <EditText
        android:id="@+id/edit_name_surname"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="#79A560CA"
        android:layout_margin="12dp"
        android:hint="  Name and Surname:"
        />

    <EditText
        android:id="@+id/edit_telNubmer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="#79A560CA"
        android:layout_margin="12dp"
        android:hint="  Tel number:"
        android:inputType="phone"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Save"
        android:textSize="26sp"
        app:backgroundTint="#E85E1F80" />

</LinearLayout>